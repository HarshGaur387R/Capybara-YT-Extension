        <nav class="responsive-nav-bar-container">
            <span class="material-symbols-outlined menu-btn-respo">
                menu
            </span>
        </nav>

        <nav class="responsive-nav-bar">
            <div class="logo pt-5">Capybara</div>
            <ul class="navbar-list text-center">
